{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "node",
    "skipLibCheck": true,
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "removeComments": false,
    "noImplicitAny": false,
    "lib": [
      "es2017",
      "dom"
    ]
  },
  "include": [
    "app",
    "./*.js|ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
